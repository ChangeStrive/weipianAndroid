<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_46dp">

    <EditText
        android:id="@+id/edt_educational_information"
        style="@style/edt_base_mess"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_34dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_general_edt_normal"
        android:gravity="center_vertical"
        android:hint="@string/please_enter"
        android:maxLength="50"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/imb_educational_information_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/color_00000000"
        android:paddingRight="@dimen/dimen_5dp"
        android:src="@mipmap/img_general_delete" />

    <View
        android:id="@+id/view_divider"
        style="@style/horizontal_line_divider_fill"
        android:layout_alignParentTop="true" />
</RelativeLayout>
