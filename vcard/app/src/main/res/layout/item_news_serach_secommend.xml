<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/all_btn_background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:background="@drawable/bg_search_bar"
        android:paddingBottom="@dimen/dimen_6dp"
        android:paddingTop="@dimen/dimen_6dp">

        <EditText
            android:id="@+id/edt_enter_search_content"
            style="@style/news_search_text_size_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_news_search"
            android:drawableLeft="@mipmap/img_news_find"
            android:drawablePadding="@dimen/dimen_4dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16dp"
            android:singleLine="true"
            android:hint="@string/search_hint" />
    </RelativeLayout>

    <View style="@style/vertical_line_divider_height_dimen_10dp"/>
    
    <RelativeLayout
        android:id="@+id/rel_friend_recommend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">
        <RelativeLayout
            android:id="@+id/rel_recommend"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_news_recommend"/>
            <ImageView
                android:id="@+id/imv_friend_recommend"
                android:layout_alignRight="@id/imv_recommend"
                android:layout_width="@dimen/dimen_14dp"
                android:layout_height="@dimen/dimen_14dp"
                android:src="@mipmap/img_red_sign" />
        </RelativeLayout>
        <TextView
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@id/rel_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_setting_general_size_and_color"
            android:layout_centerVertical="true"
            android:text="@string/friend_recommend"/>
    </RelativeLayout>
    <View style="@style/horizontal_line_divider_padding_dimen_15dp"/>
    <RelativeLayout
        android:id="@+id/rel_system_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">
        <RelativeLayout
            android:id="@+id/rel_system"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_news_system"/>
            <ImageView
                android:id="@+id/imv_system_news"
                android:layout_alignRight="@id/imv_system"
                android:layout_width="@dimen/dimen_14dp"
                android:layout_height="@dimen/dimen_14dp"
                android:src="@mipmap/img_red_sign" />
        </RelativeLayout>
        <TextView
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@id/rel_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_setting_general_size_and_color"
            android:layout_centerVertical="true"
            android:text="@string/system_news"/>
    </RelativeLayout>
    <View style="@style/vertical_line_divider_height_dimen_10dp"/>
</LinearLayout>
