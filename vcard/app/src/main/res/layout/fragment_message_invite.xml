<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_btn_background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.maya.android.vcard.ui.frg.MessageInviteFragment">

    <com.maya.android.vcard.ui.widget.PinnedSectionListView
        android:id="@+id/lsv_msg_invite_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:cacheColorHint="@color/color_00000000"
        android:divider="@null"
        android:dividerHeight="@dimen/dimen_0dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"/>
    <TextView
        android:id="@+id/txv_lsv_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/common_loading_data"
        style="@style/text_setting_general_size_and_color"
        android:visibility="gone" />
</RelativeLayout>
