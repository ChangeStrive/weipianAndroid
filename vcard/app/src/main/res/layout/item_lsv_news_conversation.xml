<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_55dp"
    android:minHeight="@dimen/dimen_55dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp">

  <com.maya.android.asyncimageview.widget.AsyncImageView
        android:id="@+id/imv_img_head"
        android:layout_width="@dimen/dimen_43dp"
        android:layout_height="@dimen/dimen_43dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />
  <!--  <ImageView
        android:id="@+id/imv_img_head"
        android:layout_width="@dimen/dimen_43dp"
        android:layout_height="@dimen/dimen_43dp"
        android:src="@mipmap/ic_launcher" />-->

    <TextView
        android:id="@+id/txv_datetime"
        style="@style/news_conversation_datetime_size_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/imv_img_head"/>

    <TextView
        android:id="@+id/txv_red_hint_num"
        style="@style/red_hint_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_33dp"
        android:background="@drawable/bg_num_red"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/txv_title"
        style="@style/news_conversation_name_size_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imv_img_head"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_toLeftOf="@id/txv_datetime"
        android:layout_toRightOf="@id/imv_img_head"
        android:text="名称"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txv_content"
        style="@style/news_conversation_content_size_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txv_title"
        android:layout_alignBottom="@id/imv_img_head"
        android:text="1111111111111"
        android:singleLine="true" />


</RelativeLayout>
