<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dimen_45dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:minWidth="@dimen/dimen_160dp">

    <ImageView android:id="@+id/imv_menu_lsv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="@dimen/dimen_15dp"/>

    <TextView android:id="@+id/txv_menu_lsv_icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_292929"
        android:textSize="@dimen/dimen_15sp"
        android:layout_toRightOf="@id/imv_menu_lsv_icon"
        android:layout_centerVertical="true"/>

</RelativeLayout>
