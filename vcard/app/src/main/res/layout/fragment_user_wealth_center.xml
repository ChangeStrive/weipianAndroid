<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_frg_view_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maya.android.vcard.ui.frg.UserWealthCenterFragment">

    <TextView
        android:id="@+id/txv_hint"
        style="@style/text_hint_vcard_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_18dp"
        android:background="@color/color_e2e2e2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:text="@string/base_info" />

    <LinearLayout
        android:id="@+id/lil_user_wealth"
        style="@style/all_btn_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_hint"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_setting_general_size_and_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/user_name" />

            <TextView
                android:id="@+id/txv_user_name"
                style="@style/vcard_qrcode_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/img_general_right_arrow" />
        </LinearLayout>

        <View style="@style/horizontal_line_divider_fill" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_setting_general_size_and_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/myself_integral" />

            <TextView
                android:id="@+id/txv_myself_integral"
                style="@style/vcard_qrcode_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/img_general_right_arrow" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
