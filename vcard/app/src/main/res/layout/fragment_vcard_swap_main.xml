<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_vcard_swap"
    tools:context="com.maya.android.vcard.ui.frg.VCardSwapMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_vcard_swap_top_blue_light"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_31dp"
            android:text="@string/swaping_vcard_now"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:text="@string/wait_a_moment_please"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_12sp" />

        <TextView
            android:id="@+id/txv_swap_card_count_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:background="@mipmap/bg_vcard_swap_time"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_30sp" />

        <ImageView
            android:id="@+id/imv_swap_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_43dp"
            android:contentDescription="@string/my_card" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imb_swap_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/color_00000000"
        android:contentDescription="@string/my_card"
        android:src="@mipmap/img_vcard_swap_close" />
</RelativeLayout>
