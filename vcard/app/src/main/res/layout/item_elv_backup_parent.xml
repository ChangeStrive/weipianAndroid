<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_backroundcolor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50dp"
    android:minHeight="@dimen/dimen_50dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp">

    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txv_title"
        style="@style/text_setting_general_size_and_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imv_icon"
        android:layout_marginLeft="@dimen/dimen_10dp"/>

    <ImageView
        android:id="@+id/chb_is_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_general_no_agree"
        android:paddingLeft="@dimen/dimen_2dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
