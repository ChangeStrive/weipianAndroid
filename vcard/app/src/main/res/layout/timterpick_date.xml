<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_alert_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:gravity="center"
        android:textColor="@color/color_292929"
        android:textSize="@dimen/dimen_15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/dialog_Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    </LinearLayout>

    <View
        android:id="@+id/view_dialog_line"
        style="@style/horizontal_line_divider_fill" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_54dp" 
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">

        <LinearLayout
            android:id="@+id/new_lil_dlg_cutom_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_general_btn_normal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_dialog_negative"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/color_292929"
                android:background="@null"
                android:text="@string/frg_text_cancel" />

            <View
                android:id="@+id/new_dlg_custom_line"
                style="@style/vertical_line_divider" />

            <Button
                android:id="@+id/btn_dialog_positive"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/color_292929"
                android:background="@null"
                android:text="@string/frg_text_ok" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>