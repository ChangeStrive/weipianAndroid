<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_frg_view_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_10dp">


    <RelativeLayout
        android:id="@+id/rel_frg_account_manage_vcard_secretary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        style="@style/all_btn_background_color"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">

        <com.maya.android.asyncimageview.widget.AsyncImageView
            android:id="@+id/imv_frg_account_setting_head"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/txv_frg_account_setting_vcard_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imv_frg_account_setting_head"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/imv_frg_account_setting_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="小秘书"
            style="@style/text_setting_general_size_and_color" />
        <TextView
            android:id="@+id/tv_vcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imv_frg_account_setting_head"
            android:layout_alignLeft="@+id/txv_frg_account_setting_vcard_username"
            android:text="@string/frg_setting_account_vnumber"
            android:textColor="@color/color_0a0a0b"
            style="@style/text_setting_general_right_sign_size_12sp_and_color"/>
        <TextView
            android:id="@+id/txv_frg_account_vsno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_vcard"
            android:textColor="@color/color_0a0a0b"
            android:layout_alignBottom="@+id/imv_frg_account_setting_head"
            android:text="@string/frg_setting_account_vnumber"
            style="@style/text_setting_general_right_sign_size_12sp_and_color"/>


        <TextView
            android:id="@+id/txv_frg_account_islogin"
            style="@style/text_setting_general_right_sign_size_and_color"
            android:textColor="@color/color_cccfd1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableRight="@mipmap/img_general_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/frg_setting_account_has_login" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lil_one"
        android:layout_below="@+id/rel_frg_account_manage_vcard_secretary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        style="@style/all_btn_background_color"
        android:paddingRight="@dimen/dimen_15dp">

        <RelativeLayout
            android:id="@+id/rel_frg_account_manage_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/txv_frg_account_mobile"
                style="@style/text_setting_general_size_and_color"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_15dp"
                android:gravity="center_vertical"
                android:text="@string/frg_setting_account_phone" />
            <TextView
                android:id="@+id/txv_account_phone"
                style="@style/text_main_general_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txv_frg_account_mobile"
                android:layout_alignBottom="@id/txv_frg_account_mobile"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/dimen_15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_13sp"
                android:layout_alignBottom="@id/txv_frg_account_mobile"
                android:text="@string/validation_code"
                android:paddingLeft="@dimen/dimen_4dp"
                android:textColor="@color/color_fe6030"
                android:layout_toRightOf="@id/txv_account_phone"/>
            <TextView
                android:id="@+id/txv_frg_account_manage_mobile_isbinded"
                style="@style/text_setting_general_right_sign_size_and_color"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableRight="@mipmap/img_general_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_fe6030" />

        </RelativeLayout>

        <View android:id="@+id/view_line"
            android:layout_below="@+id/rel_frg_account_manage_mobile"
            style="@style/horizontal_line_divider_padding_dimen_15dp" />

        <RelativeLayout
            android:layout_below="@+id/view_line"
            android:id="@+id/rel_frg_account_manage_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txv_email_label"
                style="@style/text_setting_general_size_and_color"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:gravity="center_vertical"
                android:text="@string/frg_setting_account_common_email" />
            <TextView
                android:id="@+id/txv_account_email"
                style="@style/text_main_general_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txv_email_label"
                android:layout_alignBottom="@id/txv_email_label"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/dimen_13sp"/>
            <TextView
                android:id="@+id/txv_frg_account_manage_email_isbinded"
                style="@style/text_setting_general_right_sign_size_and_color"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableRight="@mipmap/img_general_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lil_two"
        android:layout_below="@+id/lil_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        style="@style/all_btn_background_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_frg_account_manage_alert_password"
            style="@style/text_setting_general_size_and_color"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/img_general_right_arrow"
            android:text="@string/frg_setting_account_alert_pwd" />

        <View style="@style/horizontal_line_divider_padding_dimen_15dp" />

        <RelativeLayout
            android:id="@+id/rel_frg_account_setting_protect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:id="@+id/txv_frg_account_setting_protect"
                style="@style/text_setting_general_size_and_color"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:gravity="center_vertical"
                android:text="@string/frg_setting_account_protect" />

            <TextView
                android:id="@+id/txv_frg_account_setting_protect_lock"
                style="@style/text_setting_general_right_sign_size_and_color"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableRight="@mipmap/img_general_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/frg_setting_account_common_unlock" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_three"
        android:layout_below="@+id/lil_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        style="@style/all_btn_background_color"
        android:paddingRight="@dimen/dimen_15dp">

        <TextView
            android:id="@+id/txv_frg_account_auto_associate_match_contact"
            style="@style/text_setting_general_size_and_color"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:text="@string/frg_setting_account_auto_associate_match_contact" />

        <com.maya.android.vcard.ui.widget.SlipButton
            android:id="@+id/sbtn_frg_account_auto_associate_match_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/rel_three"
        android:id="@+id/txv_act_account_auto_associate_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_15dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/frg_setting_account_auto_associate_warn"
        android:textColor="@color/color_787878"
        android:textSize="@dimen/dimen_10sp" />
</RelativeLayout>
