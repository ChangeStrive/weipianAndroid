<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_frg_view_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maya.android.vcard.ui.frg.UserSmsRecommendFriendFragment">

    <com.maya.android.vcard.util.AlignTextView
        android:id="@+id/txv_user_vcard_hint"
        style="@style/user_vcard_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:text="@string/user_vcard_hint" />

    <RelativeLayout
        android:id="@+id/rel_submit"
        style="@style/all_btn_background_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">

        <Button
            android:id="@+id/btn_send"
            style="@style/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_general_btn_normal"
            android:text="@string/pop_send_msg" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txv_user_vcard_hint"
        android:layout_above="@id/rel_submit">

        <LinearLayout
            style="@style/all_btn_background_color"
            android:id="@+id/lil_add_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <!--<RelativeLayout-->
        <!--style="@style/all_btn_background_color"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="@dimen/dimen_55dp"-->
        <!--android:layout_below="@id/txv_user_vcard_hint">-->

        <!--<include layout="@layout/inc_lsv_view" />-->
    <!--</RelativeLayout>-->

</RelativeLayout>
