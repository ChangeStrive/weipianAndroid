<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_frg_view_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maya.android.vcard.ui.frg.SettingAccountManageFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/all_btn_background_color">
        <ListView
            android:id="@+id/lsv_account_manage_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cacheColorHint="@color/color_00000000"
            android:divider="@drawable/lsv_divider"
            android:dividerHeight="@dimen/dimen_1px"
            android:drawSelectorOnTop="false"
            android:fastScrollEnabled="false"
            android:focusable="true"
            android:listSelector="@color/color_00000000"
            android:fadeScrollbars="false"/>
    </RelativeLayout>

</RelativeLayout>
