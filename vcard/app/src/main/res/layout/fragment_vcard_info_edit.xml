<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_frg_view_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimen_15dp"
    tools:context="com.maya.android.vcard.ui.frg.VCardInfoEditFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_hint_vcard_info_edt_big"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_18dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="@string/warm_prompt_hint" />

        <TextView
            style="@style/text_hint_vcard_info_edt_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_6dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="@string/v_card_edt_hint_small" />

        <View
            style="@style/all_btn_background_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp" />

        <TextView
            style="@style/text_hint_vcard_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_18dp"
            android:background="@color/color_e2e2e2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="@string/base_info" />

        <LinearLayout
            style="@style/all_btn_background_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_email_register_size_and_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/family_name" />

                <EditText
                    android:id="@+id/edt_family_name"
                    style="@style/edt_base_mess"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_34dp"
                    android:background="@drawable/bg_general_edt_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/not_null"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_email_register_size_and_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/edt_name"
                    style="@style/edt_base_mess"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_34dp"
                    android:background="@drawable/bg_general_edt_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/not_null"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text_hint_vcard_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_18dp"
            android:background="@color/color_e2e2e2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="@string/unit_information" />

        <LinearLayout
            style="@style/all_btn_background_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_email_register_size_and_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job" />

                <EditText
                    android:id="@+id/edt_job"
                    style="@style/edt_base_mess"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_34dp"
                    android:background="@drawable/bg_general_edt_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/not_null"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:id="@+id/lil_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_company"
                        style="@style/text_email_register_size_and_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/company" />

                    <EditText
                        android:id="@+id/edt_company"
                        style="@style/edt_base_mess"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_34dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txv_company"
                        android:background="@drawable/bg_general_edt_normal"
                        android:gravity="center_vertical"
                        android:hint="@string/not_null"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/imb_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/color_00000000"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@mipmap/img_add_more_edt" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_email_register_size_and_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/business" />

                <TextView
                    android:id="@+id/txv_business"
                    style="@style/edt_base_mess"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_34dp"
                    android:background="@drawable/bg_general_edt_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/not_null"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:drawableRight="@mipmap/img_general_right_arrow"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:id="@+id/lil_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_address"
                        style="@style/text_email_register_size_and_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/address" />

                    <EditText
                        android:id="@+id/edt_address"
                        style="@style/edt_base_mess"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_34dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txv_address"
                        android:background="@drawable/bg_general_edt_normal"
                        android:gravity="center_vertical"
                        android:hint="@string/not_null"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/imb_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/color_00000000"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@mipmap/img_add_more_edt" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_email_register_size_and_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/url" />

                <EditText
                    android:id="@+id/edt_url"
                    style="@style/edt_base_mess"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_34dp"
                    android:background="@drawable/bg_general_edt_normal"
                    android:gravity="center_vertical"
                    android:hint="@string/please_enter"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text_hint_vcard_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_18dp"
            android:background="@color/color_e2e2e2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="@string/contact_information" />

        <LinearLayout
            android:id="@+id/lil_contact_information"
            style="@style/all_btn_background_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <LinearLayout
                android:id="@+id/lil_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_mobile"
                        style="@style/text_email_register_size_and_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/mobile" />

                    <EditText
                        android:id="@+id/edt_mobile"
                        style="@style/edt_base_mess"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_34dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txv_mobile"
                        android:background="@drawable/bg_general_edt_normal"
                        android:gravity="center_vertical"
                        android:hint="@string/not_null"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/imb_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/color_00000000"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@mipmap/img_add_more_edt" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:id="@+id/lil_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_telephone"
                        style="@style/text_email_register_size_and_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/telephone" />

                    <EditText
                        android:id="@+id/edt_telephone"
                        style="@style/edt_base_mess"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_34dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txv_telephone"
                        android:background="@drawable/bg_general_edt_normal"
                        android:gravity="center_vertical"
                        android:hint="@string/please_enter"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/imb_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/color_00000000"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@mipmap/img_add_more_edt" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:id="@+id/lil_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_fax"
                        style="@style/text_email_register_size_and_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/fax" />

                    <EditText
                        android:id="@+id/edt_fax"
                        style="@style/edt_base_mess"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_34dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txv_fax"
                        android:background="@drawable/bg_general_edt_normal"
                        android:gravity="center_vertical"
                        android:hint="@string/please_enter"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/imb_fax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/color_00000000"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@mipmap/img_add_more_edt" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/horizontal_line_divider_fill" />

            <LinearLayout
                android:id="@+id/lil_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_email"
                        style="@style/text_email_register_size_and_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/email" />

                    <EditText
                        android:id="@+id/edt_email"
                        style="@style/edt_base_mess"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_34dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txv_email"
                        android:background="@drawable/bg_general_edt_normal"
                        android:gravity="center_vertical"
                        android:hint="@string/please_enter"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/imb_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/color_00000000"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@mipmap/img_add_more_edt" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lil_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/horizontal_line_divider_fill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lil_sina_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/horizontal_line_divider_fill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lil_tencent_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/horizontal_line_divider_fill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lil_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/horizontal_line_divider_fill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lil_msn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/horizontal_line_divider_fill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lil_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/horizontal_line_divider_fill" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text_hint_vcard_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_18dp"
            android:background="@color/color_e2e2e2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="@string/other_information" />

        <RelativeLayout
            style="@style/all_btn_background_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_6dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_6dp">

            <EditText
                android:id="@+id/edt_other_information"
                style="@style/edt_base_mess"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65dp"
                android:layout_below="@+id/tv1"
                android:background="@drawable/bg_general_edt_normal"
                android:gravity="top|left"
                android:hint="@string/description_or_other_information"
                android:maxLength="500"
                android:padding="@dimen/dimen_5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txv_add_more_information"
                style="@style/text_email_register_size_and_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:drawableLeft="@mipmap/img_add_more_edt"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="@string/add_more_information" />
        </RelativeLayout>

        <LinearLayout
            style="@style/all_btn_background_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:background="@drawable/bg_general_btn_normal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_negative"
                style="@style/text_setting_general_size_and_color"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_00000000"
                android:gravity="center"
                android:text="@string/frg_text_cancel" />

            <View style="@style/vertical_line_divider" />

            <Button
                android:id="@+id/btn_positive"
                style="@style/btn_submit"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_00000000"
                android:gravity="center"
                android:text="@string/save_info" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
