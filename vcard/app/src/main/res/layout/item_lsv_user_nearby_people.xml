<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/all_btn_background_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60dp"
    android:paddingBottom="@dimen/dimen_5dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_5dp">

    <com.maya.android.asyncimageview.widget.AsyncImageView
        android:id="@+id/imv_head"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imv_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3dp"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/txv_name"
        style="@style/user_att_and_fans_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_toRightOf="@id/imv_head" />

    <TextView
        android:id="@+id/txv_position"
        style="@style/user_att_and_fans_other_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txv_name"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/txv_name" />


    <TextView
        android:id="@+id/txv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_general_btn_green"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_3dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_3dp"
        android:textSize="@dimen/dimen_12sp" />

    <TextView
        android:id="@+id/txv_company"
        style="@style/user_att_and_fans_other_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imv_head"
        android:layout_alignLeft="@+id/txv_name"
        android:layout_toLeftOf="@+id/txv_state"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txv_distance"
        style="@style/user_att_and_fans_other_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txv_state"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_toLeftOf="@id/txv_state" />

</RelativeLayout>
