<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_social_relation"
    style="@style/all_btn_background_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_65dp"
    android:layout_marginTop="@dimen/dimen_10dp">

    <LinearLayout
        android:id="@+id/lil_social_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txv_chat"
            style="@style/userinfo_bottom_selected"
            android:layout_width="@dimen/dimen_58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableTop="@mipmap/img_userinfo_chat"
            android:gravity="center_horizontal"
            android:text="@string/chat"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txv_private_letter"
            style="@style/userinfo_bottom_selected"
            android:layout_width="@dimen/dimen_58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableTop="@mipmap/img_userinfo_private_letter"
            android:gravity="center_horizontal"
            android:text="@string/private_letter"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txv_attention"
            style="@style/userinfo_bottom_selected"
            android:layout_width="@dimen/dimen_58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableTop="@mipmap/img_userinfo_attention"
            android:gravity="center_horizontal"
            android:text="@string/attention"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txv_mutual_attention"
            style="@style/userinfo_bottom_selected"
            android:layout_width="@dimen/dimen_58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableTop="@mipmap/img_userinfo_mutual_attention"
            android:gravity="center_horizontal"
            android:text="@string/mutual_attention"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txv_report"
            style="@style/userinfo_bottom_selected"
            android:layout_width="@dimen/dimen_58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableTop="@mipmap/img_userinfo_report"
            android:gravity="center_horizontal"
            android:text="@string/report"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txv_swap_card"
            style="@style/userinfo_bottom_selected"
            android:layout_width="@dimen/dimen_58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableTop="@mipmap/img_userinfo_swap_card"
            android:gravity="center_horizontal"
            android:text="@string/swap_card"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
