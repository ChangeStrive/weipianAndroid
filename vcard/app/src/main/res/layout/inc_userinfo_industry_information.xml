<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/all_btn_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_email_register_size_and_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/business" />

        <TextView
            android:id="@+id/txv_business"
            style="@style/text_setting_general_size_and_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/maya"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <View style="@style/horizontal_line_divider_fill"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_email_register_size_and_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/job" />

        <TextView
            android:id="@+id/txv_job"
            style="@style/text_setting_general_size_and_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/maya"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <View style="@style/horizontal_line_divider_fill"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_email_register_size_and_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/company" />

        <TextView
            android:id="@+id/txv_company"
            style="@style/text_setting_general_size_and_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/maya"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
